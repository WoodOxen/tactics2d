{
    "permissions": {
      "deny": [
        // Build artifacts and build files
        "Read(./build/**)",
        "Read(./dist/**)",
        "Read(./tactics2d.egg-info/**)",
        "Read(./*.so)",
        "Read(./__pycache__/**)",
        "Read(./*.pyc)",

        // Test and runtime files
        "Read(./tests/runtime/**)",
        "Read(./.pytest_cache/**)",
        "Read(./.coverage)",
        "Read(./htmlcov/**)",

        // Documentation build outputs
        "Read(./docs/_build/**)",
        "Read(./site/**)",

        // Claude Code generated files
        "Read(./claude-*.md)",

        // Temporary files and logs
        "Read(./*.log)",
        "Read(./*.tmp)",
        "Read(./*.cache)"
      ],
      "allow": [
        // Common project commands allowed
        "Bash(pytest tests/ --cov=tactics2d)",
        "Bash(black --line-length 100 .)",
        "Bash(isort --profile black .)",
        "Bash(clang-format -i tactics2d/interpolator/cpp_interpolator/src/*.cpp tactics2d/geometry/cpp_geometry/src/*.cpp)",
        "Bash(mkdocs build)",
        "Bash(python setup.py install)",
        "Bash(python setup.py build)"
      ]
    },
    "cleanupPeriodDays": 30,
    "respectGitignore": true
  }
